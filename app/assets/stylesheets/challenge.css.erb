/* reset */
html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, dl, dt, dd, ol, nav ul, nav li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure, figcaption, footer, header, menu, nav, output, ruby, section, summary, time, mark, audio, video {
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    font: inherit;
    vertical-align: baseline;
}

article, aside, details, figcaption, figure, footer, header, menu, nav, section {
    display: block;
}

ol, ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

blockquote, q {
    quotes: none;
}

blockquote:before, blockquote:after, q:before, q:after {
    content: '';
    content: none;
}

table {
    border-collapse: collapse;
    border-spacing: 0;
}

a {
    text-decoration: none;
}

.txt-rt {
    text-align: right;
}

/* text align right */
.txt-lt {
    text-align: left;
}

/* text align left */
.txt-center {
    text-align: center;
}

/* text align center */
.float-rt {
    float: right;
}

/* float right */
.float-lt {
    float: left;
}

/* float left */
.clear {
    clear: both;
}

/* clear float */
.pos-relative {
    position: relative;
}

/* Position Relative */
.pos-absolute {
    position: absolute;
}

/* Position Absolute */
.vertical-base {
    vertical-align: baseline;
}

/* vertical align baseline */
.vertical-top {
    vertical-align: top;
}

/* vertical align top */
.underline {
    padding-bottom: 5px;
    border-bottom: 1px solid #eee;
    margin: 0 0 20px 0;
}

/* Add 5px bottom padding and a underline */
nav.vertical ul li {
    display: block;
}

/* vertical menu */
nav.horizontal ul li {
    display: inline-block;
}

/* horizontal menu */
img {
    max-width: 100%;
}

video {
    max-width: 100%;
}

/*end reset*/

/* page enti√®re */
body {
    font-family: "Avenir", "Arial", Helvetica, Arial, "Lucida Grande", sans-serif;
    font-size: 1.2em;
    font-weight: 500;
    line-height: 1.8em;
    background: #FAFAFA;
}

#content-wrapper {
    display: none;
}

/******************* Page d'un challenge ***********************/

.logo {
    padding-bottom: 1em;
    padding-top: 1em;
    margin-left: auto;
    margin-right: auto;
    width: 150px;
    height: 40px;
    display: block;
}

.main_frame {
    padding: 1em;
    /*text-align: center;*/
    background: #FFFFFF;
    margin-left: auto;
    margin-right: auto;
    width: 640px;
}


.main_media img {
    margin-left: auto;
    margin-right: auto;
    display: block;
}

.text_frame {
    padding: 1em;
    text-align: left;
    vertical-align: middle;
}

.text_frame span {
    display: inline-block;  /* circle wraps image */
    vertical-align: middle;
    margin-top : auto;
    margin-bottom: auto;
    width: 80%;
    padding-left: 2%;
}

.text_frame b {
    font-weight: 900;
}

.avatar {
    line-height: 0; /* remove line-height */
    display: inline-block;  /* circle wraps image */
    border: 2px solid #000000;
    border-radius: 50%; /* relative value */
    /*box-shadow: 0px 0px 5px rgba(0,0,0,0.4);*/
    height: 50px;
    width: 50px;
    vertical-align: middle;
}


.avatar img {
    border-radius: 50%;
    /* relative value for
                   adjustable image size */
}


.count_frame {
    color:#9B9B9B;
    font-size: 1em;
    vertical-align: middle;
    margin : auto;
    width: 70%;
}

.count_frame span{
    margin-right: 10%;
}

.count_frame img{
    height: 25px;
    width: 25px;
    display: inline-block;  /* circle wraps image */
    margin: auto 10px auto 0;
    vertical-align: middle;
}


.answer_to {
    color:#EFEFEF;
    font-weight:900;
    margin-top: 1em;
}

.parent_challenge_frame {
    margin: 0 1em 1em 1em;
    padding: 1em;
    text-align: left;
    vertical-align: middle;
    background: #EFEFEF;
}

.challenge_small {
    width: 80px;
    height: 80px;
    display: inline-block;  /* circle wraps image */
    vertical-align: middle;
}


.parent_text_frame {
    display: inline-block;  /* circle wraps image */
    vertical-align: middle;
    text-align: left;
    margin-top : auto;
    margin-bottom: auto;
    width: 70%;
    padding-left: 5%;
}

.parent_text_frame span {
    vertical-align: middle;
    margin-top : auto;
    margin-bottom: auto;
    padding-left: 2%;
}

.parent_text_frame b {
    font-weight: 900;
}

.avatar_small {
    line-height: 0; /* remove line-height */
    display: inline-block;  /* circle wraps image */
    border: 2px solid #000000;
    margin-top: 6px;
    margin-left: 1em;
    vertical-align: top;
    border-radius: 50%; /* relative value */
    /*box-shadow: 0px 0px 5px rgba(0,0,0,0.4);*/
    height: 25px;
    width: 25px;
}

.avatar_small img {
    border-radius: 50%;
    /* relative value for
                   adjustable image size */
}

.parent_challenge_frame a, a:link, a:visited {
    color:#000000;
}

.parent_challenge_frame b {
    font-weight: 900;
}

.store_links{
    margin: 3em auto 1em;
    width: 640px;
    text-align: center;
    font-size: 0.7em;
    font-weight: 300;
    line-height: 1em;
    color:#9B9B9B;
}


.store_links img {
    padding: 2em;
    margin: auto;
    width: 135px;
    height: 40px;
    display: inline-block;  /* circle wraps image */
}

.flash{
    font-style: italic;
    color: #B00100;
}

.subtitle{
    color: #AAAAAA;
    font-size: small;
}

.btn {
    border: 1px solid #aaa;
    color: white;
    padding: 0px 10px;
    margin-right: 5px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
}
.btn:hover {
    background-color: #aaa;
}

/* ----- SimpleForm Styles ----- */

.simple_form input {
    padding: 5px;
    font-size: 16px;
}
.simple_form div.input {
  margin-bottom: 10px;
  clear: both; /* Required for Webkit, but not for Gecko */
}

.simple_form label {
  float: left;
  width: 200px;
  text-align: right;
  margin: 2px 10px;
  font-size: 16px;
}

div.boolean, .simple_form input[type='submit'] {
  margin-left: 120px;
}

div.boolean label, label.collection_radio_buttons {
  float: none;
  margin: 0;
}

label.collection_radio_buttons {
  margin-right: 10px;
  vertical-align: -2px;
  margin-left: 2px;
}

.field_with_errors {
  background-color: #ff3333;
}

.simple_form .error {
  clear: left;
  color: black;
  display: block;
  margin-left: 120px;
}

.simple_form .hint {
  clear: left;
  margin-left: 120px;
  color: #555;
  display: block;
  font-style: italic;
}

input.radio {
  margin-right: 5px;
  vertical-align: -3px;
}

input.check_boxes {
  margin-left: 3px;
  vertical-align: -3px;
}

label.collection_check_boxes {
  float: none;
  margin: 0;
  vertical-align: -2px;
  margin-left: 2px;
}

table.horizontal th{
    font-weight: bold;
    text-align: right;
    padding-right: 20px;
}

table.results {
  width: 100%;
  font-size: 14px;

}

table.results thead {
  background-color: #EEEEEE;
  font-weight: bold;
  line-height: 20px;
}

table.results tbody td.right{
    text-align: right;
}
table.results tbody td.left{
    text-align: left;
}

table.results tbody td.center{
    text-align: center;
}


table.results tbody tr:nth-child(even){
  background-color: #EEEEEE;
}




/********************* format Mobile *********************/
@media all and (max-width: 966px) {
    .main_frame {
        width: 66%;
    }

    .store_links {
        width: 400px;
    }

    .parent_challenge_frame span {
        width: 70%;
    }
}

@media all and (max-width: 640px) {
    .main_frame {
        padding: 0;
        width: 100%;
    }

    .store_links {
        width: 60%;
    }
}


@media all and (max-width: 414px) {
    body {
        line-height: 1.4em;
    }

    .main_frame {
        padding: 0;
        width: 100%;
    }

    .text_frame span {
        font-size: 1em;
        width: 70%;
    }

    .count_frame {
        font-size: 0.8em;
        margin-top: 1em;
        width: 100%;
    }

    .store_links {
        width: 85%;
    }

    .parent_text_frame {
        font-size: 0.8em;
        padding-left: 5%;
    }

    .avatar {
        width: 40px;
        height: 40px;
    }

    .avatar_small {
        width: 12px;
        height: 12px;
    }

    .challenge_small {
        width: 60px;
        height: 60px;
    }
}