<table class='results table table-default table-striped table-condensed small' %>
  <thead>
    <tr>
			<th class='text-center'>Tel.</th>
			<th class='text-center'>Email</th>
			<th class='text-center'><%= sortable "bib", "Dossard", @race %></th>
			<th class='text-center'><%= sortable "rank", "Class. Gen.", @race %></th>
			<th ><%= sortable "name", "Nom", @race %></th>
			<th class='text-center'><%= sortable "sex", "Sexe", @race %></th>
			<th class='text-center'><%= sortable "sex_rank", "Class. Sexe", @race %></th>
			<th class='text-center'><%= sortable "categ", "Categ", @race %></th>
			<th class='text-center'><%= sortable "categ_rank", "Class. Categ", @race %></th>
			<th class='text-center'><%= sortable "time", "Temps", @race %></th>
			<th class='text-center'><%= sortable "speed", "Vitesse", @race %></th>
			<th class='text-center'><%= sortable "race_detail", "Détail course", @race %></th>
			<th class='text-center'>Message</th>
			<th class='text-center'>Chargé le</th>
			<th class='text-center'>Mail</th>
			<th class='text-center'>SMS</th>
			<th class='text-center'>Diplôme</th>
    </tr>
  </thead>
  <%= render partial: 'result', collection: @results%>
</table>

<div class="pagination">
	<% params[:page] = 1 if params[:page].nil?
	params[:page] = params[:page].to_i
	if params[:page]> 1 %>
		<%= link_to "<-", race_path(@race, page: params[:page] - 1), class: 'btn btn-default'%>
	<%end%>
	<%if   params[:page]  < @results.total_pages && @results.total_pages > 1%>
		<%= link_to "->", race_path(@race, page: params[:page] + 1), class: 'btn btn-default'%>
	<%end%>
</div>
