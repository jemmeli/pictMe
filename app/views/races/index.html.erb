<h1>Courses</h1>

<table class='table table-default table-striped'>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Date</th>
      <th>NB Resultats</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <%@races.each do |race|%>
      <tr>
        <td><%=link_to race.name, race_path(race)%></td>
        <td><%=race.date%></td>
        <td><%=race.results.count%></td>
        <td><%=link_to "Editer", edit_race_path(race), class: 'btn btn-default btn-sm'%></td>
      </tr>
    <%end%>
  </tbody>
</table>

<hr>
<%= link_to "Nouvelle course", new_race_path(), class:'btn btn-default'%>