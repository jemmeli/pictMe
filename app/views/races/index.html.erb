<h1>Courses</h1>

<table class='results'>
  <thead>
    <tr>
      <td>Nom</td>
      <td>Date</td>
      <td>NB Resultats</td>
      <td>&nbsp;</td>
    </tr>
  </thead>
  <tbody>
    <%@races.each do |race|%>
      <tr>
        <td><%=link_to race.name, race_path(race)%></td>
        <td><%=race.date%></td>
        <td><%=race.results.count%></td>
        <td><%=link_to "Editer", edit_race_path(race)%></td>
      </tr>
    <%end%>
  </tbody>
</table>

<hr>
<%= link_to "Nouvelle course", new_race_path(), class:'btn'%>