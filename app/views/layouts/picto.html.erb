<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= if content_for?(:title) then
          yield(:title) + ' | '
        end %>
    PictMe
  </title>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%#= stylesheet_link_tag 'login', media: 'all' , 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
</head>
<body class="picto-page">

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"> <img src="<%= asset_path('logoEventList.png') %>" alt="logo"> </a>
      <form class="navbar-form navbar-left">
        <div class="form-group inner-addon left-addon">
          <i class="glyphicon glyphicon-search"></i>
          <input type="text" placeholder="Chercher un événement" class="form-control searchEvent">
        </div>
      </form>

    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <div class="navbar-form navbar-right">
        <ul class="list-inline">
          <li><a href="#">  <img src="<%= asset_path('activityIcon.png') %>" width="20" height="20" alt="activites"> </a> </li>
          <li> | </li>
          <li class="dropdown pull-right">
            <a href="#" data-toggle="dropdown" class="dropdown-toggle"> <img src="<%= asset_path('thumb.png') %>" width="30" height="30"> <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li class="divider"></li>
              <li> <%= link_to "Déconnexion", destroy_user_session_path , :method => :delete %>  </li>
            </ul>
          </li>
        </ul>
      </div>
    </div><!--/.navbar-collapse -->
</nav>

<div class="container">

  <div class="row filterRow">
    <div class="col-md-4">
      <h1> Evénements </h1>
    </div>
    <div class="col-md-8">
      <form class="form-inline filtreForm">
        <span>Filtrer par </span>
        <div class="form-group">
          <select class="form-control input-lg">
            <option>Du 12/01 au 23/02</option>
          </select>
        </div>
        <div class="form-group">
          <select class="form-control input-lg">
            <option>Lieu (départ)</option>
          </select>
        </div>
        <div class="form-group">
          <select class="form-control input-lg">
            <option>Sport</option>
          </select>
        </div>
        <button type="submit" class="btn btn-orange">+</button>
      </form>
    </div>
  </div>
</div>

<div class="container mainContainer">

  <%= yield %>

  <hr>

  <footer>
    <p>&copy; 2020 PictMe, Inc.</p>
  </footer>

</div> <!-- /container -->

</body>
</html>
