<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
<!--  <meta name="viewport" content="width=device-width, initial-scale=1">-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= if content_for?(:title) then yield(:title) + ' | ' end %>
    Kapp10 - FreshStart
  </title>

  <link href="https://fonts.googleapis.com/css2?family=PT+Sans:wght@400;700&display=swap" rel="stylesheet">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'login', media: 'all' , 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
</head>
<body class="login-page">
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <nav class="navbar">
        <div class="logo">
        <!-- <a href="<%#= root_path%>"><span>Kapp10 FreshStart</span></a>-->
          <img class="img-fluid logo"  src="<%= asset_path('logoLoginPictMeNB.png') %>"  >
        </div>
      </nav>
    </div>
  </div>
  <!-- cadre du contenu sous le mÃ©dia -->
  <div>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>

      <!-- <p class="notice"><%#= notice %></p>-->
      <!-- <p class="alert"><%#= alert %></p>-->
    <% end %>
  </div>

  <div class="content_frame">
    <%= yield %>
  </div>
</div>
</body>
</html>
