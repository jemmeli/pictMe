<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
  <title>Kapp10 - FinishLine</title>
</head>
<body>
<!-- cadre général -->
<div class="main">
  <!-- cadre de l'image de profil + texte -->
  <div class="name"><%= @name %></div>
  <div class="number"><%= @number %></div>
  <div class="stats">
    <div class="stat">
      <%= @rank_image %>
      <%= @rank %>/<%= @rank_total %>
    </div>
    <div class="stat">
      <%= @rank_image %>
      <%= @time %>
    </div>
    <div class="stat">
      <%= @rank_image %>
      <%= @speed %>km/h
    </div>
  </div>
  <div class="race">
    <%= @race_name %><br/>
    <%= @race_date %>
  </div>
  <div class="credit">
    Powered by Kapp10 finishline
  </div>
</div>
</body>
</html>